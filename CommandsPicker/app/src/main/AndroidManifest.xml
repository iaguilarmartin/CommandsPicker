<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.iaguilarmartin.commandspicker">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".model.CommanderApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.SettingsActivity">
        </activity>
        <activity android:name=".activity.TableDetailActivity">
        </activity>
        <activity android:name=".activity.CourseDetailActivity">
        </activity>
        <activity android:name=".activity.CoursesActivity">
        </activity>
        <activity
            android:name=".activity.AboutActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>