<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.iaguilarmartin.commandspicker.activity.SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/number_of_tables"
            android:textSize="@dimen/settings_section_text_size"
            android:textStyle="normal|bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/numberOfTablesEdit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:layout_weight="1"
                android:textColor="@color/colorSection"
                android:textStyle="normal|bold"
                android:textSize="@dimen/settings_editText_text_size"/>

            <Button
                android:id="@+id/addTableBtn"
                android:text="+"
                android:layout_width="@dimen/settings_button_width"
                android:paddingTop="@dimen/settings_button_padding_top"
                android:textSize="@dimen/button_text_size"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/removeTableBtn"
                android:text="-"
                android:layout_width="@dimen/settings_button_width"
                android:paddingTop="@dimen/settings_button_padding_top"
                android:textSize="@dimen/button_text_size"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/change_tables_warning"
            android:textSize="@dimen/settings_section_description_text_size"
            android:textStyle="normal|italic"
            android:textColor="#AAA"/>
    </LinearLayout>
</LinearLayout>
